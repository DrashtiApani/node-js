<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Books - LibraryMS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body>

    <!-- Header -->
    <%- include('header') %>

        <!-- Full Screen Container -->
        <div class="full-screen d-flex">

            <!-- Left Sidebar -->
            <div class="sidebar ">
                <%- include('sidebar') %>
            </div>

            <!-- Right Content Area -->
            <div class="content flex-grow-1">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2>Book Catalog</h2>

                </div>

                <!-- Table -->
                <div class="table-responsive table-container">
                    <table class="table table-bordered table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Description</th>
                                <th>Genre</th>
                                <th>ISBN</th>
                                <th>Available</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% books.forEach(book=> { %>
                                <tr>
                                    <td>
                                        <div style="display: flex; align-items: center; gap: 10px;">
                                            <img src="<%= book.image %>" alt="<%= book.title %>"
                                                style="width: 70px; height: 60px;">
                                            <span>
                                                <%= book.title %>
                                            </span>
                                        </div>
                                    </td>

                                    <td>
                                        <%= book.author %>
                                    </td>
                                    <td>
                                        <%= book.description %>
                                    </td>
                                    <td>
                                        <%= book.genre %>
                                    </td>
                                    <td>
                                        <%= book.isbn %>
                                    </td>
                                    <td>
                                        <p
                                            style="background-color: rgb(154, 187, 89); text-align: center ; border-radius: 10px; color: aliceblue; margin: auto;">
                                            <%= book.available %>
                                        </p>
                                    </td>



                                    <td>
                                        <div class="icon">
                                            <a href="/deletebook/<%= book._id %>"
                                                onclick="return confirm('Are you sure?')" class="btn btn-danger btn-sm mb-2 ms-1 ">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                            <a href="/editbook/<%= book._id %>" class="btn btn-primary btn-sm mb-2 ms-1">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a href="/viewbook/<%= book._id %>" class="btn btn-info btn-sm mb-1 ms-1">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="/downloadbook/<%= book._id %>" class="btn btn-success btn-sm mb-1 ms-1">
                                                <i class="bi bi-download"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>